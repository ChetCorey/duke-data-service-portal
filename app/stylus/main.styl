@import 'normalize'
@import 'helper'

/* variables */
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea 
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

.content
  padding: .5em
  margin: 0px auto

.project-list-grid
  max-width: 1100px

.project-container
  overflow: auto
  margin: 20px auto
  max-width: 1100px
  position: relative
  text-align: center


.account-overview-container
  margin-top: -100px


//Spacer for header height (might want to use vh and vw instead)
.ribbon
  height: 200px
  width: 200%
  background-color: #FFFFFF


