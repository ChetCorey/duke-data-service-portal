@import 'normalize'
@import 'helper'

/* color variables */
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7
$blue = #235F9C
$lightBlue = #448AFF
$pink = #EC407A

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor, 10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

.page
  background-color #f5f5f5

.content
  padding-top 76px

.page-content
  padding-top 76px

 // Slide content right if menu is opened
.slide-right
  @media screen and (min-width 700px) and (max-width 1280px)
    transform: scale(1);
    transition: 0.10s linear
    padding-left 250px
  @media screen and (min-width 1280px) and (max-width 1470px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-left 240px
  @media screen and (min-width 1470px) and (max-width 1800px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-left 220px

 //Slide content left if search filters are opened
.slide-left
  @media screen and (min-width 700px) and (max-width 1280px)
    transform: scale(1);
    transition: 0.10s linear
    padding-right 250px
  @media screen and (min-width 1280px) and (max-width 1470px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-right 240px
  @media screen and (min-width 1470px) and (max-width 1800px)
    transform: scale(1);
    transition: 0.10s all linear;
    padding-right 220px

.group:after
  content: "";
  display: table;
  clear: both;

.account-overview
  max-width: 1250px
  margin: 0 auto

#app-root
  padding: 0
  height: 100vh
  width: 100vw

.project-container
  max-width: 1280px
  margin: 0 auto

.preview-container
  max-width: 1260px
  margin: 0 auto

.list-container
  max-width: 1280px
  margin: 0 auto

.list-items-container
  max-width: 1244px
  margin: 0 auto

.search-results-container
  max-width: 980px
  margin: 0 auto
  margin-top: 80px

.link:hover
  text-decoration: underline

.hover a
  color: #616161

.hover a:hover
  background: #FCFCFC

input[type=text]::-ms-clear /*To remove the cancel button inside inputs IE10+*/
  display: none;

//Project Details styles
.hide-details
  visibility: hidden;
  opacity: 0;
  max-height: 0;
  transition: visibility 0s, opacity 0.3s linear, max-height 0.3s linear;
  transition-timing-function: ease-in;

.show-details
  visibility: visible;
  opacity: 1;
  max-height: 1000px;
  transition: visibility 0s, opacity 0.3s linear, max-height 0.3s linear;
  transition-timing-function: ease-in;

