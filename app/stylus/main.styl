@import 'normalize'
@import 'helper'

/* variables */
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor, 10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

.content
  padding-top 100px

.group:after
  content: "";
  display: table;
  clear: both;

.account-overview
  max-width: 1200px
  margin: 0 auto

.project-container
  max-width: 1230px
  margin: 0 auto

.preview-container
  max-width: 1260px
  margin: 0 auto

.list-container
  max-width: 1280px
  margin: 0 auto

  //Breadcrumb CSS

  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  #breadcrumbs {
    overflow: auto;
    width: 100%;
  }

#breadcrumbs li {
  float: left;
  margin: 0 .5em .5em .8em;
}

#breadcrumbs a {
  background: #ddd;
  padding: 0 1em;
  float: left;
  text-decoration: none;
  color: #444;
  text-shadow: 0 1px 0 rgba(255, 255, 255, .5);
  position: relative;
}

#breadcrumbs a:hover {
  background: #5ac8fa;
}

#breadcrumbs a::before,
#breadcrumbs a::after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 1em;
  background: #ddd;
  transform: skew(-10deg);
}

#breadcrumbs a::before {

  left: -.5em;
  border-radius: 5px 0 0 5px;
}

#breadcrumbs a:hover::before {
  background: #5ac8fa;
}

#breadcrumbs a::after {
  right: -.5em;
  border-radius: 0 5px 5px 0;
}

#breadcrumbs a:hover::after {
  background: #5ac8fa;
}

#breadcrumbs .current,
#breadcrumbs .current:hover {
  font-weight: bold;
  background: none;
}

#breadcrumbs .current::after,
#breadcrumbs .current::before {
  content: normal;
}